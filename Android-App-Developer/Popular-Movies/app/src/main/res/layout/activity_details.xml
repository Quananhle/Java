<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context="com.example.Quan_Le.popular_movies_android_app.DetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/details_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_200"
            android:layout_marginBottom="@dimen/dim_20"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movie_poster"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dim_20"
            android:layout_marginStart="@dimen/dim_8"
            android:textColor="@color/orange"
            android:textSize="@dimen/dim_25"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_20"
            android:background="@android:color/holo_orange_light"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/details_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_4"
                android:layout_marginStart="@dimen/dim_4"/>
            <TextView
                android:id="@+id/details_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_4"
                android:layout_marginStart="@dimen/dim_4"/>
            <TextView
                android:id="@+id/details_users_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_4"
                android:layout_marginStart="@dimen/dim_4"/>
        </LinearLayout>
        <TextView
            android:id="@+id/details_plot_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plot_analysis"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim_16"
            android:layout_marginBottom="@dimen/dim_8"
            android:layout_marginStart="@dimen/dim_8" />
        <TextView
            android:id="@+id/details_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim_16"
            android:layout_marginBottom="@dimen/dim_8"
            android:layout_marginStart="@dimen/dim_8" />
        <TextView
            android:id="@+id/details_popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim_16"
            android:layout_marginBottom="@dimen/dim_8"
            android:layout_marginStart="@dimen/dim_8"/>
    </LinearLayout>
</ScrollView>