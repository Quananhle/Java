<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_8"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dim_4"
        android:padding="@dimen/dim_2"
        app:cardCornerRadius="@dimen/dim_8">
        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/movie_poster"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/movie_title"
        android:hint="@string/movie_text_hint"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_8"
        android:textColor="@color/cardview_light_background"
        android:gravity="start"/>
    <TextView
        android:id="@+id/movie_release_date"
        android:hint="@string/movie_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/cardview_light_background"
        android:gravity="start"/>
    <TextView
        android:id="@+id/movie_ratings"
        android:hint="@string/movie_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/cardview_light_background"
        android:gravity="start"/>
</LinearLayout>